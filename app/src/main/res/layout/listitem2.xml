<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="10dp"
    android:paddingLeft="10dp"
    android:descendantFocusability="blocksDescendants"
    android:paddingRight="10dp" >


    <Button

        android:layout_width="58dp"
        android:layout_height="wrap_content"
        android:id="@+id/golive1"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:text="Go live"
        android:onClick="onbclick" />

    <TextView
        android:text="TextView"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:layout_marginRight="25dp"
        android:layout_marginEnd="25dp"
        android:id="@+id/stopz1"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/golive" />

    <TextView
        android:text="TextView"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:id="@+id/end1"
        android:layout_alignLeft="@+id/stopz"
        android:layout_alignStart="@+id/stopz"
        android:layout_below="@+id/id" />

    <TextView
        android:text="TextView"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:id="@+id/adress1"
        android:layout_alignLeft="@+id/stopa"
        android:layout_alignStart="@+id/stopa"
        android:layout_below="@+id/id" />

    <TextView
        android:id="@+id/id1"
        android:layout_width="62dp"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textSize="25dp"
        android:paddingBottom="2dip"
        android:paddingTop="6dip"
        android:textStyle="bold"
        tools:text="id"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="TextView"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:id="@+id/stopa1"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/end"
        android:layout_toStartOf="@+id/end"
        android:layout_marginRight="17dp"
        android:layout_marginEnd="17dp" />


</RelativeLayout>